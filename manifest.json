{
  "manifest_version": 3,
  "name": "FavHub",
  "description": "Extension Chrome FavHub",
  "author": "Your name",
  "version": "1",
  "content_scripts": [
    { "matches": ["<all_urls>" ],
    "js": ["scripts/content.js"] }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_title": "Click to make go link for URL",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/eclair2.png",
      "32": "images/eclair2.png",
      "48": "images/eclair2.png",
      "128": "images/eclair2.png"
    }
  },
  "permissions": ["activeTab", "storage", "background"],
  "icons": {
    "16": "images/eclair2.png",
    "32": "images/eclair2.png",
    "48": "images/eclair2.png",
    "128": "images/eclair2.png"
  }
}
